LISA MP+o-o-mb-o-o+o-o-rb-o-o
{
a = 0;
x = 0;
c = 0;
d = 0;
}
 P0          | P1           ;
 w[once] a 1 | r[once] r1 c ;
 w[once] x 2 | r[once] r2 d ;
 f[mb]       | f[rmb]       ;
 w[once] c 3 | r[once] r3 a ;
 w[once] d 4 | r[once] r4 x ;
exists ((1:r1 = 3 /\ 1:r3 = 0) \/ 
        (1:r1 = 3 /\ 1:r4 = 0) \/
        (1:r2 = 4 /\ 1:r3 = 0) \/
        (1:r2 = 4 /\ 1:r4 = 0))
