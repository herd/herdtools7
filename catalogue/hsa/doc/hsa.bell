let narrower(s) = match s with
  || 'system -> 'agent
  || 'agent -> 'wg
  || 'wg -> 'wave
  || 'wave -> 'wi
end

let wider(s) = match s with
  || 'agent -> 'system
  || 'wg -> 'agent
  || 'wave -> 'wg
  || 'wi -> 'wave
end

enum operation-kind = 'ordinary
                   || 'atomic

enum memory-order = 'rlx
                  || 'scacq
                  || 'screl
                  || 'scar



instructions R[{'ordinary},{'rlx},{'wi}]
instructions R[{'atomic},{'rlx,'scacq,'scar},scopes]
