clean:
	/bin/rm -f *.o *.s *.t *.elf *.flat *~ *.t $(H)

%.s: %.c
	$(CC) -DASS $(GCCOPTS) -S $<

%.o: %.c
	$(CC) $(GCCOPTS) -c -o $@ $<

%.t: %.s
	awk -f show.awk $< > $@

%.h: %.t
	sh toh.sh $< > $@

run.elf: run.o $(OBJ) $(UTILS) $(FLATLIBS) $(SRCDIR)/x86/flat.lds $(cstart.o)
	$(CC) $(GCCOPTS) -nostdlib -o $@ -Wl,-T,$(SRCDIR)/x86/flat.lds $(filter %.o, $^) $(FLATLIBS)
	@chmod a-x $@

%.flat: %.elf
	 $(OBJCOPY) -O  elf32-i386 $^ $@
	@chmod a-x $@
