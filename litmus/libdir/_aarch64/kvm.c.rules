clean:
	/bin/rm -f *.o *.s *.t *.elf *.flat *~ *.t $(H)

%.s: %.c
	$(CC) -DASS $(GCCOPTS) -S $<

%.o: %.c
	$(CC) $(GCCOPTS) -c -o $@ $<

%.t: %.s
	awk -f show.awk $< > $@

%.h: %.t
	sh toh.sh $< > $@

%.elf: LDFLAGS = -nostdlib -pie -n

run.elf: run.o $(OBJ) litmus_rand.o utils.o kvm_timeofday.o $(FLATLIBS) $(SRCDIR)/arm/flat.lds $(cstart.o)
	$(CC) $(CFLAGS) -c -o $(@:.elf=.aux.o) $(SRCDIR)/lib/auxinfo.c \
		-DPROGNAME=\"$(@:.elf=.flat)\" -DAUXFLAGS=$(AUXFLAGS)
	$(LD) $(LDFLAGS) -o $@ -T $(SRCDIR)/arm/flat.lds \
		$(filter %.o, $^) $(FLATLIBS) $(@:.elf=.aux.o)
	$(RM) $(@:.elf=.aux.o)
	@chmod a-x $@

%.flat: %.elf
	$(call arch_elf_check, $^)
	$(OBJCOPY) -O binary $^ $@
	@chmod a-x $@
