(library
  (name test_helpers)
  (modules Helpers)
  (libraries asllib))

(test
  (name asltests)
  (modes native)
  (modules asltests)
  (libraries asllib test_helpers)
  (deps (glob_files asl/required/*.asl) %{test})
  (action
    (run %{test} asl/required)))

(tests
  (names static)
  (modules static)
  (modes native)
  (libraries asllib test_helpers))

